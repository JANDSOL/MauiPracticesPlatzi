<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PagePlatziSample.Views.Layouts.StackLayoutSamplePage"
             Title="StackLayoutSamplePage">
    <VerticalStackLayout VerticalOptions="Center">

        <Frame CornerRadius="20"
               Margin="20"
               MinimumHeightRequest="320"
               WidthRequest="320"
               HasShadow="True">

            <VerticalStackLayout>

                <Border Stroke="#6C63FF"
                        StrokeThickness="10"
                        Padding="9"
                        HorizontalOptions="Center">

                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="100"/>
                    </Border.StrokeShape>

                    <Frame IsClippedToBounds="True"
                           Padding="24"
                           CornerRadius="80"
                           HeightRequest="150"
                           WidthRequest="150"
                           HorizontalOptions="Center" >
                        <Image Source="undraw_pair_programming" Aspect="AspectFill" />
                    </Frame>
                </Border>

                <Label Text="Juan Andrade"
                       TextColor="#6C63FF"
                       FontAttributes="Bold"
                       FontSize="22"
                       Padding="0,20,0,0"
                       HorizontalOptions="Center" />
                <Label Text="he/him"
                       TextColor="Gray"
                       FontSize="20"
                       Padding="0,0,0,20"
                       HorizontalOptions="Center" />
                <Label Text="Hey 👋🏽! I'm a Software Engineer and I'm very excited."
                       FontAttributes="Bold"
                       FontSize="16" />
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>